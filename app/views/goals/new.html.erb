
<h1>New Goal</h1>
<form action="/goals" method="POST">
    <label for="goal_title">Title:</label>
    <input 
        type="text" 
        name="goal[title]" 
        id="goal_title"
        value="<%= @goal.title %>">
    <br>

    <label for="goal_details">Details:</label>
    <input type="text" name="goal[details]" id="goal_details">
    <br>

    <label for="goal_finished">Completed:</label>
    <input type="checkbox" name="goal[finished]" id="goal_finished">
    <br>

    <input type="hidden" 
           name="authenticity_token" 
           value="<%= form_authenticity_token %>"
    >
    <input type="submit" value="Create User!">
</form>